    <event name="Disable Autopilot">
      <description>Disable altitude autopilot at 500 ft.</description>
      <notify/>
      <condition>
        position/h-agl-ft >= 500
      </condition>
      <set name="ap/altitude_hold" value="0"/>
      <set name="ap/roll-attitude-mode" value="1"/>
      <set name="ap/autopilot-roll-on" value="1"/>
    </event>
-->

    <event name="Disable Autopilot">
      <description>Disable autopilot after 60 seconds, then MatrixPilot shall engage.</description>
      <notify/>
      <condition> simulation/sim-time-sec >= 60.0 </condition>
      <set name="ap/altitude_hold" value="0"/>
      <set name="ap/roll-attitude-mode" value="0"/>
      <set name="ap/autopilot-roll-on" value="0"/>
    </event>
<!--
